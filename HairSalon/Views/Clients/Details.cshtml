@{
  Layout = "_Layout";
}

@using HairSalon.Models
@model HairSalon.Models.Client

<h2>Client Details</h2>
<hr />
<h3> Name: @Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName)</h3>
<h3> Contact Number: @Html.DisplayFor(model => model.ContactNumber)<h3>

<h4> Stylist: @Html.ActionLink($"{Model.Stylist.FirstName} {Model.Stylist.LastName}", "Details", "Stylists", new { id = Model.StylistId}) </h4>
  
<p>@Html.ActionLink("Edit Item", "Edit", new { id = Model.ClientId})</p>

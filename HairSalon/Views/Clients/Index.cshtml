@{
  Layout = "_Layout";
}

@using HairSalon.Models;

<h1>Clients</h1>

@if (@Model.Count == 0)
{
  <h3>No Clients have been added yet!</h3>
} 

<ul>
@foreach (Client client in Model)
{
  <li>@Html.ActionLink($"{client.FirstName} {client.LastName}", "Details", new {  id = client.ClientId })</li>
}
</ul>

@if(ViewBag.Stylists == 0) {
  <p>No Available Stylists. @Html.ActionLink("Add a stylist", "Index", "Stylists") in order to Add New Clients</p>
  <p>@Html.ActionLink("Back to Home", "Index", "Home")</p>
}
else {
  <p>@Html.ActionLink("Add new client", "Create")</p>
}

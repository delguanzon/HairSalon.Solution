@{
  Layout = "_Layout";
}

@using HairSalon.Models
@model HairSalon.Models.Stylist

<h2>Stylist Details</h2>
<hr />
<h3> Name: @Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName)</h3>
<h3> Contact Number: @Html.DisplayFor(model => model.ContactNumber)<h3>

<h4> Clients: </h4>
<ul>
@foreach (Client client in Model.Clients)
{
  <li>
    @Html.ActionLink(client.FirstName + " " + client.LastName, "Details", "Clients", new { id = client.ClientId }, null)
  </li>
}
</ul>

<p>@Html.ActionLink("Add New Client", "Create", "Clients", new { id = Model.StylistId})</p>
<p>@Html.ActionLink("Edit Stylist", "Edit", new { id = Model.StylistId})</p>
<p>@Html.ActionLink("Delete Stylist", "Delete", new { id = Model.StylistId})</p>
<p> @Html.ActionLink("Back to List", "Index")</p>